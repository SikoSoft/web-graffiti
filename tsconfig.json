{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": "./src",
    "target": "es2022"
  },
  "exclude": ["build"]
}
